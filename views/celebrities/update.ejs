<h2>Edit Celebrity</h2>

<form action="/update/<%= celebrity._id %>" method="POST">
  <label for="name">Name</label>
  <input type="text" name="name" value="<%= celebrities.name %>">

  <label for="occupation">Occupation</label>
  <input type="text" name="occupation" value="<%= celebrities.occupation %>">

  <label for="catch-phrase">Catch Phrase</label>
  <input type="text" name="catchPhrase" value="<%= celebrities.catchPhrase %>">

  <button type="submit">Update Celebrity</button>
</form>

<a href="/celebrities/:id">Celebrity id</a>
